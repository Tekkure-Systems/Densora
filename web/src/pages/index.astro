---
import Layout from "../layouts/Layout.astro";
import Section from "../components/section.astro";
import DentistCard from "../components/dentistCard.astro";
import ConsultorioCard from "../components/consultorioCard.astro";
import Densora_logo from "../assets/icons/densora_logo.svg";
import Star_icon from "../assets/icons/star_icon.svg";
import Button from "../components/button.astro";
import Carousel from "../components/carousel.astro";
import ToolTip from "../components/toolTip.astro";
import LastCita from "../components/lastCita.astro";
import ClinicsMap from "../components/clinicsMap.astro";
import CitaHistorial from "../components/citaHistorial.astro";
import DentistCardData from "../components/dentistCardData.astro";
import ConsultorioCardData from "../components/consultorioCardData.astro";
---
<Layout align="center" orientation="row">
    <ToolTip text="este es un tooltip de solo texto">
        <Button design="icon" icon={Densora_logo}}/>
    </ToolTip>
    <ToolTip icons={[Densora_logo, Star_icon]} ids={["theme-icon", "menu-"]}>
        <Button design="icon" icon={Densora_logo}}/>
    </ToolTip>
    <p>tu historial de citas</p>
    <Section importance="secondary" orientation="col" mb="true">
        <LastCita>
            <CitaHistorial name={["test", "test2"]} profilePhoto={["https://randomuser.me/api/portraits/men/32.jpg", "https://randomuser.me/api/portraits/men/32.jpg"]} date={["12/06/25", "06/12/25"]} time={["1:42 P.M.", "4:21 P.M."]}/>
        </LastCita>
        <ClinicsMap profilePhoto="https://cdn.conahcyt.mx/sisdai/landing-sisdai/catalogo/visualizaciones/mapa/puntos-agrupados/2-anatomia-tamanodelpunto.png"/>
    </Section>
    <p>recomendaciones de dentistas</p>
    <Carousel importance="secondary" orientation="col" mb="true">
        <Button href="dentist" design="slot">
            <DentistCard mr="true">
