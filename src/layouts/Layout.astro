---
import "../styles/global.css";
import '@fontsource-variable/manrope';
import {ClientRouter} from 'astro:transitions';
import NavBar from "../components/navBar.astro";
const {align, orientation} = Astro.props;
let contentWraper = "";
let layoutOrientation = "";
if(orientation == "row"){
    layoutOrientation = "flex-col"
}
if(orientation == "column"){
    layoutOrientation = "flex-row"

}
if(align == "center") {
    contentWraper = 'flex items-center justify-center ';
}
---
<html lang="es" data-theme="light">
<head>
    <title>Densora</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="generator" content={Astro.generator}/>
    <ClientRouter/>
</head>
<body class=" bg-primaryBackground-light dark:bg-primaryBackground-dark font-sans p-12 pt-0">
<header>
    <NavBar />
</header>

<slot/>
<script type="module" src="/scripts/barraDeBusqueda.js" />

<div class={contentWraper + layoutOrientation}>
    <slot/>
</div>

</body>
</html>
<style>
    body {
        font-family: "Manrope Variable", serif;
    }
</style>