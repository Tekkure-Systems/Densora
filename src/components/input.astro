---
const {placeholder , type, iconLeft: IconLeft, iconRight: IconRight, mt, mb} = Astro.props;
let marginTop = "mt-none"
let marginBottom = "mb-none"
if(mt == "true"){
    marginTop = "mt-4"
}
if(mb == "true"){
    marginBottom = "mb-4"
}
---
<div class={`flex justify-between w-full max-w-md border-3 p-2 rounded ${marginTop} ${marginBottom} border-primary bg-hover-light dark:bg-hover-dark`}>
  {IconLeft && <IconLeft width="24" class="fill-secondary focus-within:fill-primary" />}
  <input type={type} placeholder={placeholder} class="w-full px-2 font-medium outline-none text-primaryText-light dark:text-primaryText-dark"/>
  {IconRight && <IconRight width="24" class="fill-secondary focus-within:fill-primary" />}
</div>