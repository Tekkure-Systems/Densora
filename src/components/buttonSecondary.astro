---
import Title from "./title.astro";
const { text, mt, mb} = Astro.props;
let marginTop = "mt-none"
let marginBottom = "mb-none"
if(mt == "true"){
    marginTop = "mt-4"
}
if(mb == "true"){
    marginBottom = "mb-4"
}
---
<div class={`flex items-center justify-center w-full max-w-md border-3 px-8 py-2 rounded ${marginTop} ${marginBottom} border-primary bg-hover-light dark:bg-hover-dark`}>
    <Title text={text}/>
</div>