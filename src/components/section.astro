---
const {importance, mt, mb, orientation, align} = Astro.props;
let containerClass = "";
let marginTop = "mt-none";
let marginBottom = "mb-none";
let flexOrientation = "";
let alignment = "";
if (mt == "true") {
    marginTop = "mt-4";
}
if (mb == "true") {
    marginBottom = "mb-4";
}
if(importance == "primary") {
    containerClass = "bg-primaryBackground-light dark:bg-primaryBackground-dark";
}
if(importance == "secondary") {
    containerClass = "bg-secondaryBackground-light dark:bg-secondaryBackground-dark";
}
if(orientation == "col"){
    flexOrientation = "flex-row";
}
if(orientation == "row"){
    flexOrientation = "flex-col";
}
if (align == "center") {
    alignment = "items-center"
}
if (align == "left") {
    alignment = "items-start"
}
if (align == "right") {
    alignment = "items-end"
}
---
<div class={`flex ${flexOrientation} ${marginTop} ${marginBottom} ${alignment} justify-center p-4 ${containerClass}`}>
    <slot />
</div>