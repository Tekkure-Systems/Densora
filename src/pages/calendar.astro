    <div class="text-center bg-secondaryBackground-light dark:bg-secondaryBackground-dark p-6 rounded shadow w-full max-w-4xl">
      <Text text="Calendario" mb="true"/>

      <!-- AquÃ­ va el calendario directamente -->
