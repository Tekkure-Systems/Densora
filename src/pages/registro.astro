---
import Layout from "../layouts/Layout.astro";
import Input from "../components/input.astro";
import ButtonPrimary from "../components/buttonPrimary.astro";
import Title from "../components/title.astro";
import Text from "../components/text.astro";
import MiniText from "../components/miniText.astro";
import StepIndicator from "../components/stepIndicator.astro";
import Section from "../components/section.astro";
import Form from "../components/form.astro";
import User_icon from '../assets/icons/user_icon.svg';
import Mexico_flag from "../assets/flags/mexico_flag.svg";
import Phone_icon from "../assets/icons/phone_icon.svg";
---
<Layout>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Inicio</title>
    </head>
    <div class="flex flex-col items-center justify-center w-full">
        <Title text="Bievenido a Densora"/>
        <Text text="Crea una cuenta para continuar" mb="true"/>
        <Form id="whatsappOTP">
            <Input placeholder="Nombre Completo" id="phone" iconLeft={User_icon} mb="true"/>
           <Input placeholder="Numero de Telefono" id="phone" iconLeft={Phone_icon} iconRight={Mexico_flag} mb="true"/>
            <ButtonPrimary text="Inciar Sesion" mb="true"/>
        </Form>
        <p id="response"></p>
        <Section importance="primary">
            <MiniText text="terminos y condiciones" mb="true"/>
            <StepIndicator/>
        </Section>
    </div>
</Layout>