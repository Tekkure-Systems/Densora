---
import Layout from "../layouts/Layout.astro";
import Text from "../components/text.astro";
import Button from "../components/button.astro";
---
<Layout align="center" orientation="row">
    <Text text="Esta pÃ¡gina necesita cuidados especiales, te ayudamos a llegar al lugar correcto." type="title" mb="true"/>
    <Button id="go-back-btn" text="Volver atras" design="secondary" animation="timer"/>
    <script>
      if (typeof window !== 'undefined') {
        document.addEventListener('DOMContentLoaded', function() {
          const btn = document.getElementById('go-back-btn');
          if (btn) {
            btn.addEventListener('click', function() {
              window.history.back();
            });
          }
          setTimeout(function() {
            window.history.back();
          }, 2000);
        });
      }
    </script>
</Layout>