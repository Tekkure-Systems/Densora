---
import Layout from "../layouts/Layout.astro";
import Input from "../components/input.astro";
import Button from "../components/button.astro";
import FileUpload from "../components/fileUpload.astro";
import User_icon from "../assets/icons/user_icon.svg";
import Text from "../components/text.astro";
import Section from "../components/section.astro";
---
<Layout>
    <div class="max-w-7xl mx-auto px-4 py-6 space-y-10 text-primaryText-light dark:text-primaryText-dark">
        <Text text="Historial Médico Dental" type="title"/>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-8">
                <Section orientation="row" padding="false">
                    <Text text="Datos personales" type="semititle" mb="true"/>
                    <Input placeholder="Nombre" id="nombre" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Apellido" id="apellido" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Edad" id="edad" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Número de contacto" id="telefono" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Sexo" id="sexo" iconLeft={User_icon} mb="true"/>
                </Section>
                <Section orientation="row" padding="false">
                    <Text text="Informacion Medica General" type="semititle" mb="true"/>
                    <Input placeholder="Alergias" id="alergias" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Enfermedades genéticas" id="geneticas" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Condiciones médicas actuales" id="condiciones" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Medicamentos actuales" id="medicamentos" iconLeft={User_icon} mb="true"/>
                </Section>
                <Section orientation="row" padding="false">
                    <Text text="Historial Clinico Dental" type="semititle" mb="true"/>
                    <Input placeholder="Última cita" id="ultimaCita" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Citas previas" id="citasPrevias" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Observaciones clínicas" id="observaciones" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Diagnósticos previos" id="diagnosticos" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Notas del dentista" id="notasDentista" iconLeft={User_icon} mb="true"/>
                </Section>
                <Section orientation="row" padding="false">
                    <Text text="Tratamientos Y Procedimientos" type="semititle" mb="true"/>
                    <Input placeholder="Dentista actual" id="dentista" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Tratamientos realizados" id="tratamientos" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Materiales utilizados" id="materiales" iconLeft={User_icon} mb="true"/>
                    <Input placeholder="Complicaciones o reacciones" id="complicaciones" iconLeft={User_icon} mb="true"/>
                </Section>
            </div>
            <div class="space-y-8">
                <Section orientation="row" padding="false">
                    <Text text="Documentos Adjuntos" type="semititle" mb="true"/>
                    <FileUpload id="documentos" label="Subir documentos PDF, RX, escaneos, etc."/>
                    <div class="mt-4 space-y-2">
                        <ul class="list-disc list-inside text-sm text-hover-dark dark:text-hover-light">
                            <li><a href="/docs/rx1.pdf" target="_blank" class="underline">Radiografía panorámica - Mayo
                                2025</a></li>
                            <li><a href="/docs/diagnostico.pdf" target="_blank" class="underline">Diagnóstico de caries
                                avanzada</a></li>
                        </ul>
                    </div>
                </Section>
            </div>
        </div>
        <Button design="secondary" href="profile" text="← Volver al perfil" mt="true"/>
    </div>
</Layout>